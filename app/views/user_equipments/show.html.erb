<%- model_class = UserEquipment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:reef_tank_id) %>:</strong></dt>
  <dd><%= @user_equipment.reef_tank_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reef_tank_arduino_id) %>:</strong></dt>
  <dd><%= @user_equipment.reef_tank_arduino_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @user_equipment.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:equipment_name) %>:</strong></dt>
  <dd><%= @user_equipment.equipment_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @user_equipment.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:equipment_type) %>:</strong></dt>
  <dd><%= @user_equipment.equipment_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_equipments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_equipment_path(@user_equipment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_equipment_path(@user_equipment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
