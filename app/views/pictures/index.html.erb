<h1>Picture Gallery</h1>

<div id="pictures">
  <%= render @pictures %>
</div>
<div class="clear"></div>

<%= direct_upload_form_for @uploader do |f| %>
 
  <p><%= f.file_field :image %></p>
 
  <p><%= f.submit "Upload Image" %></p>
<% end %>


<%= debug @pictures if Rails.env.development? %>

<%= debug @uploader if Rails.env.development? %>

<%= debug :reef_tank_id if Rails.env.development? %>
<%= debug @reef_tank if Rails.env.development? %>

<%= debug (params) if Rails.env.development? %>