<%- model_class = Watcher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:reef_tank_id) %>:</strong></dt>
  <dd><%= @watcher.reef_tank_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:params) %>:</strong></dt>
  <dd><%= @watcher.params %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_reason) %>:</strong></dt>
  <dd><%= @watcher.updated_reason %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reef_tank_arduino_id) %>:</strong></dt>
  <dd><%= @watcher.reef_tank_arduino_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:main_light) %>:</strong></dt>
  <dd><%= @watcher.main_light %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ato_pump) %>:</strong></dt>
  <dd><%= @watcher.ato_pump %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chiller) %>:</strong></dt>
  <dd><%= @watcher.chiller %></dd>
  <dt><strong><%= model_class.human_attribute_name(:refuge_light) %>:</strong></dt>
  <dd><%= @watcher.refuge_light %></dd>
  <dt><strong><%= model_class.human_attribute_name(:skimmer) %>:</strong></dt>
  <dd><%= @watcher.skimmer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:main_pump) %>:</strong></dt>
  <dd><%= @watcher.main_pump %></dd>
  <dt><strong><%= model_class.human_attribute_name(:heater) %>:</strong></dt>
  <dd><%= @watcher.heater %></dd>
  <dt><strong><%= model_class.human_attribute_name(:powerhead) %>:</strong></dt>
  <dd><%= @watcher.powerhead %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temp) %>:</strong></dt>
  <dd><%= @watcher.temp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ambeint_temp) %>:</strong></dt>
  <dd><%= @watcher.ambeint_temp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ph_level) %>:</strong></dt>
  <dd><%= @watcher.ph_level %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              watchers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_watcher_path(@watcher), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              watcher_path(@watcher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
