<%= simple_form_for @todo_task, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :reef_tank_id %>
  <%= f.input :list_id %>
  <%= f.input :description %>
  <%= f.input :completed %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                todo_tasks_path, :class => 'btn' %>
  </div>
<% end %>
