<%- model_class = UpdateCode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:reef_tank_id) %></th>
      <th><%= model_class.human_attribute_name(:reef_tank_arduino_id) %></th>
      <th><%= model_class.human_attribute_name(:sent_email) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:display_site_wide) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @update_codes.each do |update_code| %>
      <tr>
        <td><%= link_to update_code.id, update_code_path(update_code) %></td>
        <td><%= update_code.reef_tank_id %></td>
        <td><%= update_code.reef_tank_arduino_id %></td>
        <td><%= update_code.sent_email %></td>
        <td><%= update_code.message %></td>
        <td><%= update_code.priority %></td>
        <td><%= update_code.display_site_wide %></td>
        <td><%=l update_code.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_update_code_path(update_code), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      update_code_path(update_code),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_update_code_path,
            :class => 'btn btn-primary' %>
