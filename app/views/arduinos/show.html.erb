<%- model_class = Arduino -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:reef_tank_id) %>:</strong></dt>
  <dd><%= @arduino.reef_tank_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parameter_setup) %>:</strong></dt>
  <dd><%= @arduino.parameter_setup %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reef_tank_arduino_id) %>:</strong></dt>
  <dd><%= @arduino.reef_tank_arduino_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arduino_board_type) %>:</strong></dt>
  <dd><%= @arduino.arduino_board_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              arduinos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_arduino_path(@arduino), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              arduino_path(@arduino),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
