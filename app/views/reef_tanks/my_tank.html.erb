<%- model_class = ReefTank -%>

<!-- Jumbotron -->
     <div class="jumbotron">
       <h1>Reef Sense</h1>
       <p class="lead">Real Time Data, Alarm Notification and continually real time monitoring </p>
       <a class="btn btn-large btn-success" href="#">Check out the Real Time Data</a>
     </div>

     <hr>
<% @current_status = @reef_tank.watchers.order("created_at").first %>


     <!-- Example row of columns -->
     <div class="row-fluid">
       <div class="span4">
         <h2>Real Time Data</h2>
         <p>  
	
	
	
			<table class="table table-striped">
			  <tbody>
			    <tr>
					<td>Temp</td>
				      <td><% if (@current_status != nil) then %>
					  <%= @current_status.temp %>
					<% else %>
					<% end %>

								</td>

				     </tr>
					<tr>
						<td>Last Updated</td>
					      <td>	<% if (@current_status != nil) then %>
								 <%= time_ago_in_words(@current_status.created_at) %>  ago  
							<% else %>
							<% end %>

									</td>
					     </tr>
					
						 <tr>
								<td>Heater</td>
							      <td>
							<% if @current_status.heater  == true %>
										    <span class="label label-success">ON</span>
											<%else%>	
											<span class="label label-warning">OFF</span>
											<%end%>

											</td>

							     </tr>

	  </tbody>
	</table>
	
	</p>
         <p><a class="btn" href="#">View details &raquo;</a></p>
       </div>
       <div class="span4">
         <h2>Pump Status</h2>
         <p> 
			<table class="table table-striped">
			  <tbody>
			    <tr>
					<td>PowerHead</td>
				      <td><% if @current_status.powerhead  == true %>
							    <span class="label label-success">ON</span>
								<%else%>	
								<span class="label label-warning">OFF</span>
								<%end%>
								
								</td>
			 
				     </tr>
					<tr>
						<td>Pump</td>
					      <td><% if @current_status.main_pump  == true %>
								    <span class="label label-success">ON</span>
									<%else%>	
									<span class="label label-warning">OFF</span>
									<%end%>

									</td>
					     </tr>
	    
	  </tbody>
	</table>
	
	 </p>
         <p><a class="btn" href="#">View details &raquo;</a></p>
      </div>
       <div class="span4">
         <h2>Water Level</h2>
         <p>	<table class="table table-striped">
			  <tbody>
			    <tr>
					<td>ATO Pump</td>
				      <td><% if @current_status.ato_pump  == true %>
							    <span class="label label-success">ON</span>
								<%else%>	
								<span class="label label-warning">OFF</span>
								<%end%>

								</td>

				     </tr>
					<tr>
						<td>Pump</td>
					      <td><% if @current_status.main_pump  == true %>
								    <span class="label label-success">ON</span>
									<%else%>	
									<span class="label label-warning">OFF</span>
									<%end%>

									</td>
					     </tr>

	  </tbody>
	</table></p>
         <p><a class="btn" href="#">View details &raquo;</a></p>
       </div>
     </div>

     <hr>

     <div class="footer">
       <p>&copy; ReefSense 2013</p>
     </div>


<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>


 
 
 <%= render :partial => 'current_status' , :reef_tank => @reef_tank %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @reef_tank.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:setup_date) %>:</strong></dt>
  <dd><%= @reef_tank.setup_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:size) %>:</strong></dt>
  <dd><%= @reef_tank.size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:measurement_type) %>:</strong></dt>
  <dd><%= @reef_tank.measurement_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:send_email_okay) %>:</strong></dt>
  <dd><%= @reef_tank.send_email_okay %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reef_tank_arduino_id) %>:</strong></dt>
  <dd><%= @reef_tank.reef_tank_arduino_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              reef_tanks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reef_tank_path(@reef_tank), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reef_tank_path(@reef_tank),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<%= debug @reef_tank if Rails.env.development? %>
<%= debug @watchers if Rails.env.development? %>
<%= debug(params) if Rails.env.development? %>