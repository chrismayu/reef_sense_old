<%= simple_form_for @notification, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :reef_tank_id, :as => :hidden %>
 

<%= f.input :reef_tank_arduino_id, :as => :hidden  %>

 
  <%= f.input :sent_email %>
  
  <%= f.input :priority %>
  <%= f.input :display_site_wide %>
 <%= f.input :check_parameter %>

 <%= f.input :check_item %>
 

 <%= f.input :message %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notifications_path, :class => 'btn' %>
  </div>
<% end %>
