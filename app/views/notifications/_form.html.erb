<%= simple_form_for @notification, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :reef_tank_id %>
  <%= f.input :reef_tank_arduino_id %>
  <%= f.input :sent_email %>
  <%= f.input :message2 %>
  <%= f.input :message %>
  <%= f.input :priority %>
  <%= f.input :display_site_wide %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notifications_path, :class => 'btn' %>
  </div>
<% end %>
